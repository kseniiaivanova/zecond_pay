model Homeowner {
  id                String  @id @default(cuid()) @map("_id")
  name              String
  email             String?
  phone             String?
  addressId         String?
  primaryPropertyId String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

